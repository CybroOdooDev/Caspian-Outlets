<odoo>
    <data>

<!--        Pos Session-->
        <record id="pos_post" model="ir.ui.view">
            <field name="name">pos_restrict_post</field>
            <field name="model">pos.session</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_session_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@id='validate_opened']" position="attributes">
                    <attribute name="groups">pos_disable_all.group_senior</attribute>
                </xpath>
            </field>
        </record>

<!--        Expense Report-->
        <record id="expense_post" model="ir.ui.view">
            <field name="name">expense_restrict_post</field>
            <field name="model">hr.expense.sheet</field>
            <field name="inherit_id" ref="hr_expense.view_hr_expense_sheet_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_sheet_move_create']" position="attributes">
                    <attribute name="groups">pos_disable_all.group_senior</attribute>
                </xpath>
            </field>
        </record>

<!--        Invoice restrict reset to draft-->
        <record id="invoice_restrict_draft" model="ir.ui.view">
            <field name="name">invoice_restrict_draft</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='button_draft']" position="attributes">
                    <attribute name="groups">pos_disable_all.group_admin</attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>