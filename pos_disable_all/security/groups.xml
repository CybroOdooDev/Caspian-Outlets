<odoo>
    <record id="module_category_pos" model="ir.module.category">
        <field name="name">PoS Configuration</field>
        <field name="description">Helps to Manage Point of sale operations</field>
        <field name="sequence">0</field>
    </record>

    <record id="group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_pos"/>
    </record>

    <record id="group_cashier" model="res.groups">
        <field name="name">Cashier</field>
        <field name="category_id" ref="module_category_pos"/>
    </record>

    <record id="group_supervisor" model="res.groups">
        <field name="name">Supervisor</field>
        <field name="category_id" ref="module_category_pos"/>
        <field name="implied_ids" eval="[(4, ref('group_manager'))]"/>
    </record>

    <record id="group_accountant" model="res.groups">
        <field name="name">Accountant</field>
        <field name="category_id" ref="module_category_pos"/>
    </record>

    <record id="group_senior" model="res.groups">
        <field name="name">Senior Accountant</field>
        <field name="category_id" ref="module_category_pos"/>
        <field name="implied_ids" eval="[(4, ref('group_accountant'))]"/>
    </record>

    <record id="group_pro_officer" model="res.groups">
        <field name="name">Procurement Officer</field>
        <field name="category_id" ref="module_category_pos"/>
    </record>

    <record id="group_hr" model="res.groups">
        <field name="name">HR</field>
        <field name="category_id" ref="module_category_pos"/>
    </record>

    <record id="group_admin" model="res.groups">
        <field name="name">Admin</field>
        <field name="category_id" ref="module_category_pos"/>
        <field name="implied_ids" eval="[(4, ref('pos_disable_all.group_manager')),
            (4, ref('pos_disable_all.group_supervisor')), (4, ref('pos_disable_all.group_hr')), (4, ref('pos_disable_all.group_senior'))]"/>
    </record>

    <record model="ir.ui.menu" id="hr.menu_hr_root">
          <field name="groups_id" eval="[(6,0,[ref('group_hr')])]"/>
    </record>

    <record model="ir.ui.menu" id="account_accountant.menu_accounting">
          <field name="groups_id" eval="[(6,0,[ref('group_accountant')])]"/>
    </record>

    <record model="ir.rule" id="rule_pos_config_cashier">
        <field name="name">Assigned Outlet</field>
        <field name="model_id" ref="point_of_sale.model_pos_config"/>
        <field name="groups" eval="[(4,ref('group_cashier'))]"></field>
        <field name="domain_force">[('related_user_id', '=', user.id)]</field>
    </record>
</odoo>