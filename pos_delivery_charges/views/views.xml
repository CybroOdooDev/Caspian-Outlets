<?xml version="1.0"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_pos_pos_form">
            <field name="name">pos.order.inherit</field>
            <field name="model">pos.order</field>
            <field name="inherit_id" ref="point_of_sale.view_pos_pos_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="pos_delivery_region" readonly="True"/>
                </field>
            </field>
        </record>
        <record id="pos_config_view_form_pos_sale" model="ir.ui.view"> 
          <field name="name">pos.config.form.pos.sale</field>
          <field name="model">pos.config</field>
          <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
          <field name="arch" type="xml">
              <div id="category_reference" position="after">
                  <div class="col-xs-12 col-md-6 o_setting_box">
                      <div class="o_setting_left_pane">
                      </div>
                      <div class="o_setting_right_pane">
                          <label for="delivery_region_ids"/><br/>
                          <field name='delivery_region_ids' widget="many2many_tags"/>
                      </div>
                  </div>
              </div>
          </field>
      </record>
        <record id="pos_delivery_region_form" model="ir.ui.view">
            <field name="name">pos.delivery.region.form</field>
            <field name="model">pos.delivery.region</field>
            <field name="arch" type="xml">
                <form string="Discount">
                    <sheet>      
                        <div class="oe_title">    
                            <div>
                                <label for="name" string="Name"/>
                            </div>
                            <h1>
                                <field name="name" required="True"/>
                            </h1>
                        </div>
                        <group>
                            <field name="delivery_charges"/>
                            <field name="product_id"/>
                        </group>
                    </sheet>                         
                </form>
            </field>
        </record>               
        <record id="pos_delivery_region_tree" model="ir.ui.view">
            <field name="name">pos.delivery.region.tree</field>
            <field name="model">pos.delivery.region</field>
            <field name="arch" type="xml">
                <tree string="Voucher config">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="pos_delivery_region_action" model="ir.actions.act_window">
            <field name="name">Delivery Region</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pos.delivery.region</field>
            <field name="view_mode">tree,form</field>                   
        </record>

        <menuitem name="Delivery Region" id="pos_delivery_region_menu" parent="point_of_sale.menu_point_config_product" action="pos_delivery_region_action" />

    </data>
</odoo>
