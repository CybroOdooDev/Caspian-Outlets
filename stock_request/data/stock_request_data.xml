<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="ir_cron_update_purchase_order_state" model="ir.cron">
            <field name="name">Update state: Updates state of purchase order</field>
            <field name="model_id" ref="model_purchase_order"/>
            <field name="state">code</field>
            <field name="code">model._update_purchase_order_state()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 13:00:00')"/>
            <field name="priority">2</field>
            <field name="active" eval="True" />
            <field name="doall" eval="True"/>
        </record>

</odoo>